MODULE main
 VAR
    a: boolean;
    b: boolean;
 ASSIGN
    -- Initial Conditions
    
    init(a):= {TRUE, FALSE};
    init(b):= TRUE;

    -- Transition Relations
    next(a) :=
      case
        (b): TRUE;
        (!b): FALSE;
      esac;
    next(b) :=
      case
        (a): TRUE;
        (!a): FALSE;
      esac;
