MODULE main
 VAR
    p1_ticket: 0..3;
    a: boolean;
    b: boolean;
 ASSIGN
    -- Initial Conditions
    
    
    init(p1_ticket) := 3;
    init(a):= {TRUE, FALSE};
    init(b):= TRUE;

    -- Transition Relations
    next(a) :=
      case
        (b): TRUE;
        (!b): FALSE;
      esac;
    next(b) :=
      case
        (a): TRUE;
        (!a): FALSE;
       esac;
    next(p1_ticket) :=
       case
         (a): {1,2};
         TRUE: 2;
      esac;
