-- 1: ~a
-- 2: (a \/ ~a)

MODULE main
 VAR
    a: boolean;
    PC: 1..2;
 ASSIGN
    -- Initial Conditions
    init(a):= FALSE;
    init(PC):= 1; -- program counter starts at 1.

    -- Transition Relations
    next(a) :=
      case
        (PC=1): {FALSE};
        (PC=2): {TRUE, FALSE};
        TRUE: a;
      esac;

    next(PC) :=
      case
        (PC=1): 2;
        (PC=2): 2;
        TRUE: PC;
      esac;
