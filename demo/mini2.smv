
MODULE main
 VAR
    a: boolean;
    b: boolean;
    c: boolean;
 ASSIGN
    -- Initial Conditions
    init(a):= TRUE;
    init(b):= TRUE;
    init(c):= TRUE;
    

    -- Transition Relations
    next(a) :=
      case
        TRUE: {TRUE, FALSE};
        -- a: FALSE;
        -- !a: TRUE;
      esac;
    next(b) :=
      case
        b: FALSE;
        !b: TRUE;
      esac;
    next(c) :=
      case
        c: FALSE;
        !c: TRUE;
      esac;
