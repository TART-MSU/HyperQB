MODULE main
 VAR
    Mode: 0..1; -- 0: secure, 1: unclassified
    PC: 1..3;
 ASSIGN
    -- Initial Conditions
    -- init(Mode): 0..1;
    init(PC): 1; -- but program counter starts at 1.

    -- Transition Relations
    next(Mode) := Mode;
    next(PC) :=
      case
        (PC=1): 2;
        (PC=2): 3;
        (PC=3): 3;
        TRUE: PC;
      esac;
