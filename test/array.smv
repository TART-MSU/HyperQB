MODULE main
 VAR
    a[0]: 0..3;
    a[0][1]: 0..3;
    a[0][2]: 0..3;
 ASSIGN
    -- Initial Conditions
    init(a[0]):= 0;
    init(a[0][1]):= 1;
    init(a[0][2]):= 2;

    -- Transition Relations
    next(a[0]) :=
      case
        (a[0] = 3): 3;
        TRUE: a[0]+1;
      esac;

    next(a[0][1]) :=
      case
        (a[0][1] = 3): 3;
        TRUE: a[0][1]+1;
      esac;

    next(a[0][2]) :=
      case
        (a[0][2] = 3): 3;
        TRUE: a[0][2]+1;
      esac;

DEFINE
    same := ((a[0]=3) & (a[0][1]=3) & (a[0][2]=3));
    diff := ((a[0]!=3) | (a[0][1]!=3) | (a[0][2]!=3));