cat >example3.pg <<EOF
parity 4;
0 6 1 4,2;
4 5 1 0;
1 8 1 2,4,3;
3 6 20 4,2;
2 7 3 3,1,0,4;
EOF
autfilt example3.pg >stdout 2>stderr && exit 1
