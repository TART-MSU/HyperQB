MODULE main
-- A simple program that violates non-interference
--
-- 1: LOW=false, HIGH={false, true}
-- 2: if(HIGH):
-- 3:   LOW=true
--

VAR
  HIGH: 0..1;
  LOW: 0..1;
  PC: 1..3;
ASSIGN
  -- Initial Conditions
  init(HIGH):= {0, 1};
  init(LOW):= {0};
  init(PC):= 1; -- program counter starts at 1.

  -- Transition Relations
  next(HIGH) := HIGH;
  next(LOW) :=
    case
      ((PC=2) & (HIGH=1)): 1;
      TRUE: LOW;
    esac;
  next(PC) :=
    case
      (PC=3): 3;
      TRUE: PC+1;
    esac;
DEFINE
